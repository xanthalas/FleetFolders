<Window x:Class="FleetFolders.AddFolder"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="FleetFolders - Add Folder" Height="100" Width="300" WindowStyle="ToolWindow">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="190" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2">
            <Label>Path:</Label>
            <TextBox Name="folderPath" Width="200" TextChanged="folderPath_TextChanged">sadasdasda</TextBox>
        </StackPanel>
        
        <Button Name="browseForFolder" Grid.Row="0" Grid.Column="2" Margin="4">...</Button>
        <Button Name="okButton" Grid.Row="1" Grid.Column="1" Margin="4" IsCancel="False" Click="okButton_Click">Ok</Button>
        <Button Name="cancelButton" Grid.Row="1" Grid.Column="2" Margin="2,4" IsCancel="True" Click="cancelButton_Click">Cancel</Button>
        
        <TextBox Name="errorMessage" Grid.Row="1" Grid.Column="0" Foreground="Red" />
    </Grid>
</Window>
